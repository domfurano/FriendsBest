<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_smaller"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/solution_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        android:padding="@dimen/padding_medium"
        app:cardBackgroundColor="@color/blue_gray200"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/solution_item_tag_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_smaller">

            <TextView
                android:id="@+id/solution_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Apple TV"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_title_size"/>

            <ImageView
                android:id="@+id/solution_arrow_right"
                android:layout_width="@dimen/icon_medium"
                android:layout_height="@dimen/icon_medium"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_right_blue_gray"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>