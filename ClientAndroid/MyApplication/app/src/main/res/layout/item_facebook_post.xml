<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_smaller"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/facebook_post_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        app:cardBackgroundColor="@color/com_facebook_button_background_color"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/facebook_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Want More Results?"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title_size"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@+id/facebook_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to post this search to Facebook."
                android:textColor="@color/white"
                android:textSize="@dimen/text_subheading_size"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/solution_arrow_right"
                android:layout_width="@dimen/icon_medium"
                android:layout_height="@dimen/icon_medium"
                android:background="@drawable/ic_facebook_f"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>